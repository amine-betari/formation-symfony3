{# src/OC/PlatformBundle/Resources/view/Advert/view.html.twig #}

{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}
  Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}
  {% if advert.image is not null %}
	<img src="{{ asset(advert.image.getWebPath) }}" alt="{{ advert.image.alt }}" >
  {% endif %}
  <h2>{{ advert.title }}</h2>
  <i>Par {{ advert.author }}, le {{ advert.date|date('d/m/Y') }}</i>

  <div class="well">
	{% if not advert.categories.empty %}
		<p>
			Cette Annonce est parue dans les catégories suivantes :
			{% for category in advert.categories %}
				<b><a href="{{ path('oc_platform_category', {'name': category.name}) }}">{{ category.name }} </a> {% if not loop.last%}, {% endif %}</b>
			{% endfor %}
		</p>
	{% endif %}
		<p>	{{ advert.content }} </p>
	{# src/OC/PlatformBundle/Resources/view/Advert/view.html.twig #}

	{% if listAdvertSkills|length > 0 %}
	  <div>
		Cette annonce <b> </b>requiert les compétences suivantes :
		<ul>
		  {% for advertSkill in listAdvertSkills %}
			<li>{{ advertSkill.skill.name }} : niveau {{ advertSkill.level }}</li>
		  {% endfor %}
		</ul>
	  </div>
	{% endif %}

  </div>
  <div class="well">
	<h3>Liste des candidatures</h3>
	<ul>
	{% for application in listApplications %}
		<li>M ou Mlle {{application.author}} a posté une candidature le {{application.date|date('d/m/Y') }} :
		<strong>{{ application.content }}</strong> 
		<span><a href="{{ path('oc_platform_delete_application', {'id': application.id}) }}">Delete this candidature</a></span>
		</li>
	{% endfor %}
	</ul>
  </div>

  <p>
    <a href="{{ path('oc_platform_home') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste
    </a>
    <a href="{{ path('oc_platform_edit', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier l'annonce
    </a>
    <a href="{{ path('oc_platform_delete', {'id': advert.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer l'annonce
    </a>
  </p>

{% endblock %}

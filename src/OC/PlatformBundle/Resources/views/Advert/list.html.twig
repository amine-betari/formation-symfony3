{# src/OC/PlatformBundle/Resources/views/Advert/index.html.twig #}

{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %} 
	List Annonce by Category - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}
   <h2>Liste des annonces pour la cat√©gorie : {{ name }}</h2>
   <ul class="list-group">
    {% for advert in listAdverts %}
      <li class="list-group-item list-group-item-info">
        <a href="{{ path('oc_platform_view', {'id': advert.id}) }}"> {{ advert.title }}  </a>
        par {{ advert.author }}, le {{ advert.date|date('d/m/Y') }}, updated le {{ advert.updatedAt|date('d/m/Y') }}
      </li>
    {% else %}
      <li>Pas (encore !) d'annonces</li>
    {% endfor %}
   </ul>
{% endblock %}

{# src/OC/PlatformBundle/Resources/view/Advert/view.html.twig #}

{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}
  Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}
{% for advert in results %}
  <h2>{{ advert.title }}</h2>
  <i>Par {{ advert.author }}, le {{ advert.date|date('d/m/Y') }}</i>
  <div class="well">
	{% if not advert.categories.empty %}
		<p>
			Cette Annonce est parue dans les cat√©gories suivantes :
			{% for category in advert.categories %}
				<b><a href="{{ path('oc_platform_category', {'id': category.id}) }}">{{ category.name }} </a> {% if not loop.last%}, {% endif %}</b>
			{% endfor %}
		</p>
	{% endif %}
		<p><strong> Descriptif du poste </strong> <i>{{ advert.descriptif[:100] }} <a href="{{ path('oc_platform_view', {'id': advert.id}) }}">...</a> </i></p>
		
  </div>
  {% endfor %}
{% endblock %}

{# src/AmineBundle/Resources/views/Default/index.html.twig #}


{% extends "AmineBundle::layout.html.twig" %}

{% block title %}
        Accueil - {{ parent() }}
{% endblock %}
{% block right %}
	{{ parent() }}
{% endblock %}	
{% block body %}
	{% block ocplatform_body %}
		{% for flashMessage in app.session.flashbag.get('contact') %}
			{{ flashMessage }}
		{% endfor %}
	<div style="text-align: center;">
		<h2>Que cherchez vous ?</h2>
	</div>
	 <ul class="list-group">
		{% for category in listCategories %}
		  <li class="list-group-item list-group-item-info"><a href="{{ path('oc_platform_category', {'id': category.id}) }}"> {{ category.name }}</a> </li>
		{% else %}
		  <li>Pas (encore !) d'annonces</li>
		{% endfor %}
	</ul>
	{% endblock %}
{% endblock %}


